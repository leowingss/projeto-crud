<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <title>Produtos</title>
</head>

<body>
    <header>

    </header>

    <main class="container">
        <div>
            <h1>Lista de usuários</h1>
            <form action="/users/search" method="GET">
                <input type="text" placeholder="Pesquise" name="key">
                <button class="btn btn-primary" type="submit">Buscar</button>
                <a href="/users/cadastro" class="btn btn-secondary">Cadastrar</a>


            </form>
        </div>

        <h1>Tabela do Usuários</h1>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Categoria</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                <% produtos.forEach(produto=>{ %>
                    <tr>
                        <th scope="row"><%= produto.id_produto%></th>
                        <th><%= produto.nome%></th>
                        <th><%= produto.categoria.nome%></th>
                      
                        <th>
                            <a href="#" class="btn btn-primary"> Ver Dados</a>
                            <a href="#" class="btn btn-warning"> Editar Dados</a>
                            <form action="#" method="POST">
                                <button type="submit" class="btn btn-danger">Excluir</button>
                            </form>
                        </th>
                    </tr>
                    <% }) %>
            </tbody>
        </table>

    </main>
</body>

</html>